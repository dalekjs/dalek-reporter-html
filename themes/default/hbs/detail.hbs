<!doctype>
<html>
  <head>
    <meta charset="UTF-8">
    <title>{{testResult.name}}</title>
    <style type="text/css">{{{styles}}}</style>
</head>
<body id="detail">
    <div id="dalekjs">
        <h1 id="dalekjs-header" style="background: {{#if testResult.status}}green{{else}}red{{/if}}">{{testResult.name}} [{{testResult.browser}}]</h1>
        <table>
        {{#each eventLog}}
            <tr class="{{#if isAction}}action{{else}}assertion {{#if success}}{{else}}fail{{/if}}{{/if}}">
                {{#if isAction}}
                <td>ACTION</td>
                <td>{{type}}</td>
                <td>{{value}}</td>
                {{/if}}

                {{#if isAssertion}}
                <td>ASSERTION</td>
                <td>{{type}}</td>
                <td>Expected: {{expected}} / Actual: {{value}} ({{message}})</td>
                {{/if}}
            </tr>
        {{/each}}
    </table>
    </div>
    <script>{{{js}}}</script>
</body>
</html>
